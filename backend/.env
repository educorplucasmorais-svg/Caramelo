# Configurações do WhatsApp Cloud API

# Phone Number ID (obtido no Meta for Developers)
WHATSAPP_PHONE_NUMBER_ID=

# Access Token (obtido no Meta for Developers)
WHATSAPP_ACCESS_TOKEN=

# Verify Token
WHATSAPP_VERIFY_TOKEN=caramelo_webhook_token_2025

# Business Account ID (obtido no Meta for Developers)
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Número do WhatsApp da ONG Caramelo
WHATSAPP_NUMBER=5531994979803

# Número da equipe para alertas
WHATSAPP_TEAM_NUMBER=5531994979803

# Porta do servidor
PORT=3001

# ================================
# Banco de Dados / Data Driver
# ================================
# Driver atual: google-sheets (padrão) ou mysql (futuro)
DATA_DRIVER=google-sheets

# Configuração Google Sheets (Service Account)
# Siga o guia: backend/GOOGLE_SHEETS_SETUP.md
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=
# ID da planilha (Spreadsheet ID) extraído da URL
GOOGLE_SHEET_ID=
# Nomes das abas que servirão como tabelas
DATA_TABLES=Animais,Adotantes,Documentos,Visitas
